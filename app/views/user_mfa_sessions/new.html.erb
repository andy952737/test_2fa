<h1>2FA驗證</h1>
<div class="mfa-container">

<h1>User Settings</h1> 
<%= @google_secret %> <br>
<%# @qr_code_uri %>
<p>Scan this QR Code with your Google Authenticator app to set up two-factor authentication:</p>  
<%= image_tag current_user.google_qr_uri, alt: "Google Authenticator QR Code", style: 'height: 200px;width: 200px;' %> 
 <%# @qr_code_uri %> <br><br>

 <%= form_tag user_mfa_sessions_create_path, method: :post, class: "search-form", role: "search" do %>
   <div class="form-group">
     <%= label_tag "Token", 'Authenticator code：'%>
     <%= text_field_tag 'mfa_code', params[:mfa_code], class: "form-control form-control-line" %>
   </div>
   <br>
   <%= submit_tag 'Log In', class: "btn btn-block btn-lg btn-primary text-uppercase fs-12 fw-600" %>
 <% end %>
</div>